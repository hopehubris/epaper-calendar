# Google Calendar Configuration
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=./token.json
ASHI_CALENDAR_ID=your-ashi-calendar-id@gmail.com
SINDI_CALENDAR_ID=your-sindi-calendar-id@gmail.com

# Display Configuration
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480
DISPLAY_COLOR_MODE=red  # 'red' for red/greyscale, 'bw' for black/white
TIMEZONE=America/Los_Angeles

# Database Configuration
DB_PATH=./events_cache.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/epaper-calendar/calendar.log

# Update interval (seconds)
UPDATE_INTERVAL=900  # 15 minutes

# Waveshare GPIO pins (RPi only)
WAVESHARE_CS_PIN=8
WAVESHARE_CLK_PIN=11
WAVESHARE_MOSI_PIN=10
WAVESHARE_DC_PIN=25
WAVESHARE_RST_PIN=27
WAVESHARE_BUSY_PIN=17
