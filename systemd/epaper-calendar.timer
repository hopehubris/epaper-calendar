[Unit]
Description=E-Paper Calendar Dashboard Timer (every 15 minutes)
Requires=epaper-calendar.service

[Timer]
# Run on boot and then every 15 minutes
OnBootSec=30sec
OnUnitActiveSec=15min

# Randomize by up to 30 seconds to avoid thundering herd
RandomizedDelaySec=30sec

# Run immediately if system was powered down during scheduled time
Persistent=true

[Install]
WantedBy=timers.target
